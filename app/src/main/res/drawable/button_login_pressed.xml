<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:padding="5dp">
            <gradient
                android:startColor="@color/primary_darker"
                android:centerColor="@color/primary_dark"
                android:endColor="@color/primary_darker"
                android:angle="90"/>
            <padding android:left="17dp"
                     android:top="10dp"
                     android:right="7dp"
                     android:bottom="10dp" />
            <stroke
                android:width="1dip"
                android:color="@color/primary_darker" />
            <corners android:radius= "8dp" />
        </shape>
    </item>
</layer-list>