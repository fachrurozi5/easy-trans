<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:padding="5dp">
            <gradient
                android:startColor="#D32F2F"
                android:centerColor="#D32F2F"
                android:endColor="#D32F2F"
                android:angle="90"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="1dip"
                android:color="#EF9A9A" />
            <corners android:radius= "4dp" />
        </shape>
    </item>
</layer-list>